<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_demo_expense_tutorial_v1">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page o_content_pdf">
                            <div class="oe_structure"></div>
                            <h2>Test Report</h2>

                            <h3 class="text-secondary mb-3">Dictionary Data</h3>
                            <table class="o_table">
                                <thead>
                                    <tr>
                                        <th class="text-start">Key</th>
                                        <th class="text-start">Value</th>
                                        <th class="text-start">ORM Data Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.demo_render_dict_data()" t-as="rec">
                                        <td><span t-esc="rec"/></td> <!-- key -->
                                        <td><span t-esc="rec_value"/></td> <!-- value 使用方法 xx_value -->
                                        <td><span t-esc="rec_value.name"/></td> <!-- value orm data -->
                                    </tr>
                                </tbody>
                            </table>

                            <h3 class="text-secondary mb-3">List Data</h3>
                            <table class="o_table">
                                <thead>
                                    <tr>
                                        <th class="text-start">Name</th>
                                        <th class="text-start">ID</th>
                                        <th class="text-start">Data</th>
                                        <th class="text-start">Orm Data</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.demo_render_list_data()" t-as="rec">
                                        <td><span t-esc="rec['name']"/></td>
                                        <td><span t-esc="rec['id']"/></td>
                                        <td><span t-esc="rec['data']"/></td>
                                        <td><span t-esc="rec['data'].id"/></td>  <!-- orm data -->
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="action_demo_expense_tutorial_v1" model="ir.actions.report">
            <field name="name">客製化報表</field>
            <field name="model">demo.expense.tutorial</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">demo_expense_tutorial_v1.report_demo_expense_tutorial_v1</field>
            <field name="report_file">demo_expense_tutorial_v1.report_demo_expense_tutorial_v1</field>
            <field name="binding_model_id" ref="demo_expense_tutorial_v1.model_demo_expense_tutorial"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
