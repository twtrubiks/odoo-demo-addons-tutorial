<?xml version="1.0"?>
<odoo>
  <record id="view_form_demo_tutorial" model="ir.ui.view">
    <field name="name">Demo Tutorial Form</field>
    <field name="model">demo.tutorial</field>
    <field name="arch" type="xml">
      <form string="Demo Tutorial">
        <sheet>
          <group>
            <field name="name"/>
            <field name="sheet_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_tree_demo_tutorial" model="ir.ui.view">
    <field name="name">Demo Tutorial List</field>
    <field name="model">demo.tutorial</field>
    <field name="arch" type="xml">
      <tree action="action_open_sheet" type="object">
        <field name="name"/>
        <field name="sheet_id" widget="many2onebutton"/>
      </tree>
    </field>
  </record>

  <record id="view_form_demo_sheet_tutorial" model="ir.ui.view">
    <field name="name">Demo Sheet Tutorial Form</field>
    <field name="model">demo.sheet.tutorial</field>
    <field name="arch" type="xml">
      <form string="Demo Sheet Tutorial">
        <sheet>
          <group>
            <field name="name"/>
          </group>
          <notebook>
              <page string="Expense">
                <field name="sheet_line_ids" >
                  <tree editable="top">
                    <field name="name"/>
                  </tree>
                </field>
              </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_tree_demo_sheet_tutorial" model="ir.ui.view">
    <field name="name">Demo Sheet Tutorial List</field>
    <field name="model">demo.sheet.tutorial</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="sheet_line_ids"/>
      </tree>
    </field>
  </record>
</odoo>